        Player.modifyActorVar(rk_SG_LesbianShootings_XXXmagazines_InStock, 100)
        Player:energy -= 5
        money -= TotalCostPrinting
    
    ElseIf 6
    
        "You have just printed 100 XXX magazines of Gay models!"
        Player.modifyActorVar(rk_SG_GayShootingsInStockP, -25)
        Player.modifyActorVar(rk_SG_GayShootings_XXXmagazines_InStock, 100)
        Player:energy -= 5
        money -= TotalCostPrinting
        
