        Player.modifyActorVar(rk_SG_ThreesomeShootings_XXXmagazines_InStock, 100)
        Player:energy -= 5
        money -= TotalCostPrinting
    
    ElseIf 3
    
        "You have just printed 100 XXX magazines of GangBang Shootings!"
        Player.modifyActorVar(rk_SG_GangBangShootingsInStockP, -25)
        Player.modifyActorVar(rk_SG_GangBangShootings_XXXmagazines_InStock, 100)
        Player:energy -= 5
        money -= TotalCostPrinting
    
